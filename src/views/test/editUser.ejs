<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="editUserscontainer">
        <form action="/api/test/updateUser", method="post">
          <div>
            <b>Update User</b>
          </div>
          <div>
            <label>
              First Name
            </label>
            <input type="text" name="firstName" value="<%= dataUser.firstName %>"/>
          </div>
          <div>
            <label>
              Last Name
            </label>
            <input type="text" name="lastName" value="<%= dataUser.lastName %>"/>
          </div>
          <div>
            <label>
              Email
            </label>
            <input type="email" name="email" value="<%= dataUser.email %>"/>
          </div>
          <div>
            <label>
              Address
            </label>
            <input type="text" name="address" value="<%= dataUser.address %>"/>
          </div>
            <button type="submit" value="<%= dataUser.id %>" name="userID">Submit</button>
        </form>
  </div>
</body>
</html>